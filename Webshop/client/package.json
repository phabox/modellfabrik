{
  "name": "modellfabrik-webshop",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "serve": "vue-cli-service serve",
    "build": "vue-cli-service build",
    "build_dev": "vue-cli-service build --mode development",
    "lint": "vue-cli-service lint",
    "start": "vue-cli-service build && serve -s dist",
    "test": "vue-cli-service test:unit",
    "docs": "jsdoc -c jsdoc.json"
  },
  "dependencies": {
    "@babylonjs/core": "^4.2.0",
    "@babylonjs/gui": "^4.2.0",
    "@babylonjs/loaders": "^4.2.0",
    "@babylonjs/materials": "^4.2.0",
    "@babylonjs/post-processes": "^4.2.0",
    "@fortawesome/fontawesome-svg-core": "^1.2.32",
    "@fortawesome/free-regular-svg-icons": "^5.15.1",
    "@fortawesome/free-solid-svg-icons": "^5.15.1",
    "@fortawesome/vue-fontawesome": "^2.0.2",
    "apollo-cache-inmemory": "^1.6.6",
    "apollo-client": "^2.6.10",
    "apollo-link-http": "^1.5.17",
    "apollo-link-ws": "^1.0.20",
    "apollo-utilities": "^1.3.4",
    "babylonjs": "^4.2.0",
    "bootstrap": "^4.5.3",
    "bootstrap-vue": "^2.21.1",
    "core-js": "^3.8.1",
    "graphql": "^15.4.0",
    "graphql-tag": "^2.11.0",
    "jquery": "^3.5.1",
    "serialize-javascript": "^5.0.1",
    "subscriptions-transport-ws": "^0.9.18",
    "vue": "^2.6.12",
    "vue-apollo": "^3.0.5",
    "vue-resize-observer": "^1.0.37",
    "vue-router": "^3.4.9",
    "vue-status-indicator": "^1.2.1",
    "vue-sweetalert2": "^4.1.1",
    "vuex": "^3.6.0"
  },
  "devDependencies": {
    "@vue/cli-plugin-babel": "^4.5.9",
    "@vue/cli-plugin-eslint": "^4.5.9",
    "@vue/cli-plugin-router": "^4.5.9",
    "@vue/cli-plugin-unit-jest": "^4.5.9",
    "@vue/cli-plugin-vuex": "^4.5.9",
    "@vue/cli-service": "^4.5.9",
    "@vue/test-utils": "^1.1.2",
    "babel-eslint": "^10.1.0",
    "babel-jest": "^26.6.3",
    "babel-preset-env": "^1.7.0",
    "better-docs": "^2.3.2",
    "eslint": "^7.15.0",
    "eslint-plugin-vue": "^7.3.0",
    "jest-webgl-canvas-mock": "^0.2.3",
    "jsdoc": "^3.6.6",
    "jsdoc-vuejs": "^3.0.9",
    "ts-jest": "^26.4.4",
    "vue-jest": "^3.0.7",
    "vue-template-compiler": "^2.6.12"
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "node": true
    },
    "extends": [
      "plugin:vue/essential",
      "eslint:recommended"
    ],
    "parserOptions": {
      "parser": "babel-eslint"
    },
    "rules": {
      "no-unused-vars": "off",
      "no-unused-labels": "off"
    }
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead"
  ],
  "jest": {
    "moduleFileExtensions": [
      "js",
      "vue",
      "ts"
    ],
    "modulePaths": [
      "<rootDir>/src",
      "<rootDir>/node_modules"
    ],
    "setupFiles": [
      "<rootDir>/test/unit/setup"
    ],
    "transform": {
      "^.+\\.js$": "<rootDir>/node_modules/babel-jest",
      "^.+\\.tsx?$": "<rootDir>/node_modules/ts-jest",
      ".*\\.(vue)$": "<rootDir>/node_modules/vue-jest"
    },
    "snapshotSerializers": [
      "<rootDir>/node_modules/jest-serializer-vue"
    ],
    "moduleNameMapper": {
      "^@/(.*)$": "<rootDir>/src/$1",
      "^.+\\.(css|styl|less|sass|scss|png|jpg|ttf|woff|woff2)$": "jest-transform-stub"
    },
    "transformIgnorePatterns": []
  }
}
